<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/operacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:textSize="50dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="Resultado"
        android:textSize="50dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="627dp"
        android:layout_below="@+id/resultado"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:background="#F1F3F5">

        <Button
            android:id="@+id/button6"
            style="@style/igual"
            android:layout_width="90dp"
            android:layout_height="202dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:background="@drawable/button_equal_state"
            android:text="=" />

        <Button
            android:id="@+id/clear"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="C"
            android:background="@drawable/button_symbols_state"
            style="@style/simbolos"/>

        <Button
            android:id="@+id/dividir"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="/"
            android:background="@drawable/button_symbols_state"
            style="@style/simbolos"/>

        <Button
            android:id="@+id/multiplicar"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="X"
            android:background="@drawable/button_symbols_state"
            style="@style/simbolos"/>

        <Button
            android:id="@+id/borrar"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/button_symbols_state"
            android:text="â†"
            style="@style/simbolos"/>

        <Button
            android:id="@+id/siete"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="7"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/ocho"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="8"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/nueve"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="9"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/menos"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:text="-"
            android:background="@drawable/button_symbols_state"
            style="@style/simbolos"/>

        <Button
            android:id="@+id/cuatro"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/cinco"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/seis"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/mas"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:text="+"
            android:background="@drawable/button_symbols_state"
            style="@style/simbolos"/>

        <Button
            android:id="@+id/uno"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/dos"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="2"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/tres"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:text="3"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/cero"
            android:layout_width="181dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="0"
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

        <Button
            android:id="@+id/punto"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:text="."
            android:background="@drawable/button_number_state"
            style="@style/general_styles"/>

    </GridLayout>

</RelativeLayout>